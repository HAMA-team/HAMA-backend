# ===================================
# HAMA 백엔드 환경 변수 템플릿
# ===================================
# 이 파일을 복사해서 .env 파일을 만들고 실제 값을 입력하세요.
# cp .env.example .env

# ===================================
# Application
# ===================================
ENV=development
DEBUG=True
APP_NAME=HAMA
API_VERSION=v1
HOST=0.0.0.0
PORT=8000

# ===================================
# Database (PostgreSQL)
# ===================================
# 로컬 개발 (Docker Compose)
DATABASE_URL=postgresql://hama:hama_password@localhost:5432/hama_db

# 또는 Railway 배포 시 (Railway가 자동 설정)
# DATABASE_URL=postgresql://...

# Docker Compose용 개별 설정
POSTGRES_USER=hama
POSTGRES_PASSWORD=hama_password
POSTGRES_DB=hama_db

# ===================================
# Redis
# ===================================
# 로컬 개발 (Docker Compose)
REDIS_URL=redis://localhost:6379/0

# Railway 배포 시 (Railway가 자동 설정)
# REDIS_URL=redis://...

# ===================================
# Celery (실시간 데이터 수집)
# ===================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_REALTIME_UPDATE_INTERVAL=60
CELERY_BATCH_SIZE=50

# ===================================
# LLM APIs (필수)
# ===================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-haiku-4-5-20251001

# Google (Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash-exp

# LLM 모드 (production: Claude, test: Gemini)
LLM_MODE=production

# Router 전용 모델
ROUTER_MODEL_PROVIDER=anthropic
ROUTER_MODEL=claude-haiku-4-5-20251001

# ===================================
# 금융 데이터 APIs
# ===================================
# DART (전자공시 시스템)
DART_API_KEY=your-dart-api-key-here

# 한국은행 ECOS API
BOK_API_KEY=your-bok-api-key-here
BOK_BASE_URL=https://ecos.bok.or.kr/api

# 한국투자증권 Open Trading API
KIS_APP_KEY=your-kis-app-key-here
KIS_APP_SECRET=your-kis-app-secret-here
KIS_ACCOUNT_NUMBER=your-account-number-here

# ===================================
# Caching (TTL in seconds)
# ===================================
CACHE_TTL_MARKET_DATA=60
CACHE_TTL_MARKET_INDEX=3600
CACHE_TTL_REALTIME_PRICE=120
CACHE_TTL_NEWS=300
CACHE_TTL_FINANCIAL_STATEMENTS=86400
CACHE_TTL_ANALYSIS_RESULTS=3600

# ===================================
# LangSmith (Optional - 디버깅용)
# ===================================
LANGSMITH_API_KEY=
LANGCHAIN_TRACING_V2=True
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=hama-backend

# ===================================
# LangGraph
# ===================================
LANGGRAPH_CHECKPOINT_TTL_MINUTES=43200
LANGGRAPH_CHECKPOINT_REFRESH_ON_READ=True
GRAPH_CHECKPOINT_BACKEND=memory

# ===================================
# CORS (프론트엔드 URL)
# ===================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ===================================
# JWT (Phase 2)
# ===================================
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================================
# Demo User
# ===================================
DEMO_USER_ID=3bd04ffb-350a-5fa4-bee5-6ce019fdad9c

# ===================================
# Logging
# ===================================
LOG_LEVEL=INFO
